[
  {
    "title": "Flask App Metrics",
    "panels": [
      {
        "type": "graph",
        "title": "Request Count",
        "targets": [
          {
            "expr": "flask_http_request_total",
            "legendFormat": "{{method}} {{status}}"
          }
        ]
      },
      {
        "type": "graph",
        "title": "Request Duration",
        "targets": [
          {
            "expr": "flask_http_request_duration_seconds_sum",
            "legendFormat": "{{method}}"
          }
        ]
      },
      {
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "flask_http_request_total{status=\"500\"}",
            "legendFormat": "500 Errors"
          }
        ]
      }
    ]
  }
]
